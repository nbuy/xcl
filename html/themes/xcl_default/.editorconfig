# editorconfig.org
# This file is for unifying the coding style for different editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

# Spaces in coffee
[**.coffee]
indent_style = space
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[**.html]
indent_style = tab
indent_size = 2

[**.js]
indent_style = space
indent_size = 2

# Tabs in less
[**.less]
indent_style = tab
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[{*.scss,*.css}]
indent_size = 2

[*.txt]
indent_style = tab
indent_size = 4

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[{*.yml,*.yaml,package.json}]
indent_style = space
indent_size = 2
